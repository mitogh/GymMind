#include <stdio.h>
#include <iostream>

using namespace std; 

int main(){
    string line; 
    
    while(getline(cin, line)){
        int i = 0; 
        while(line[i] != '\0'){
            int flag = 0; 
            int count;
            if((line[i] >= 'a' && line[i] <= 'z') || (line[i] >= 'A' && line[i] <= 'Z')){
                flag = 1; 
            }else{
                if(flag){
                    count++; 
                    count = 0; 
                }
            }
            printf("%d\n", count);
            i++; 
        }
    }
    return 0; 
}
